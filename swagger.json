{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "API Documentation",
    "description": "Documentation for managing APIs"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/apis": {
      "get": {
        "description": "Get all APIs",
        "responses": {
          "200": {
            "description": "Successfully fetched APIs"
          }
        }
      },
      "post": {
        "description": "Add a new API",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  },
                  "base_url": {
                    "type": "string"
                  },
                  "auth_required": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully created new API"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/apis/{id}": {
      "get": {
        "description": "Get API by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID of the API"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully fetched API"
          },
          "404": {
            "description": "API not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "put": {
        "description": "Update an API by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID of the API"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  },
                  "base_url": {
                    "type": "string"
                  },
                  "auth_required": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully updated API"
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "API not found"
          }
        }
      },
      "delete": {
        "description": "Delete an API by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID of the API"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully deleted API"
          },
          "404": {
            "description": "API not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
}
